@page
@model IndexModel
@{
    ViewData["Title"] = "Class Management";
}

<div class="container">
    <div class="row">
        
        <div class="col-md-4">
            <h3>Add New Class</h3>
            <form method="post">
                <div class="form-group">
                    <label>Class Name</label>
                    <input type="text" class="form-control" asp-for="NewClass.ClassName" />
                    <span asp-validation-for="NewClass.ClassName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Student Count</label>
                    <input type="number" class="form-control" asp-for="NewClass.StudentCount" />
                    <span asp-validation-for="NewClass.StudentCount" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Description</label>
                    <textarea class="form-control" asp-for="NewClass.Description"></textarea>
                    <span asp-validation-for="NewClass.Description" class="text-danger"></span>
                </div>

                
                <button type="submit" asp-page-handler="Add" class="btn btn-primary mt-2">Add Class</button>
            </form>
        </div>

        
        <div class="col-md-8">
            <h3>Class List</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Class Name</th>
                        <th>Student Count</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in IndexModel.ClassList)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.ClassName</td>
                            <td>@item.StudentCount</td>
                            <td>@item.Description</td>
                            <td>
                                <form method="post">
                                    <input type="hidden" name="id" value="@item.Id" />

                                    
                                    <button type="submit" asp-page-handler="Edit" class="btn btn-warning btn-sm">Edit</button>

                                    
                                    <button type="submit" asp-page-handler="Delete" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
