@page
@model MyRazorApp.Pages.IndexModel
@{
    ViewData["Title"] = "Class Management";
}


<style>
    body {
        background: linear-gradient(to right, #e3f2fd, #f1f8e9);
        font-family: 'Segoe UI', sans-serif;
    }

    .custom-card {
        background-color: #ffffff;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        border-radius: 20px;
        transition: transform 0.2s ease-in-out;
    }

    .custom-card:hover {
        transform: scale(1.01);
    }

    .btn-primary {
        background-color: #00b894;
        border: none;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #00a383;
    }

    .btn-warning {
        background-color: #fdcb6e;
        border: none;
        color: #333;
        transition: background-color 0.3s ease;
    }

    .btn-warning:hover {
        background-color: #faae43;
    }

    .btn-danger {
        background-color: #d63031;
        border: none;
        transition: background-color 0.3s ease;
    }

    .btn-danger:hover {
        background-color: #c0392b;
    }

    .card-header {
        border-top-left-radius: 20px;
        border-top-right-radius: 20px;
    }

    .form-label {
        font-weight: bold;
        color: #37474f;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .table td, .table th {
        vertical-align: middle;
    }
</style>

<div class="container py-5">
    <div class="row g-4">
        
        <div class="col-md-4">
            <div class="card custom-card">
                <div class="card-header bg-gradient text-white text-center" style="background: linear-gradient(to right, #00cec9, #0984e3);">
                    <h3 class="m-0">@((Model.NewClass.Id == 0) ? "Add New Class" : "Edit Class")</h3>
                </div>
                <div class="card-body">
                    <form method="post" asp-page-handler="Save">
                        <input type="hidden" asp-for="NewClass.Id" />

                        <div class="mb-3">
                            <label class="form-label">📘 Class Name</label>
                            <input type="text" class="form-control" asp-for="NewClass.ClassName" placeholder="e.g. Math 101" />
                            <span asp-validation-for="NewClass.ClassName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">👥 Student Count</label>
                            <input type="number" class="form-control" asp-for="NewClass.StudentCount" placeholder="e.g. 30" />
                            <span asp-validation-for="NewClass.StudentCount" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">📝 Description</label>
                            <textarea class="form-control" asp-for="NewClass.Description" placeholder="Short description..."></textarea>
                            <span asp-validation-for="NewClass.Description" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 fs-5">
                            @(Model.NewClass.Id == 0 ? "➕ Add Class" : "💾 Update Class")
                        </button>
                    </form>
                </div>
            </div>
        </div>

        
        <div class="col-md-8">
            <div class="card custom-card">
                <div class="card-header bg-dark text-white text-center">
                    <h3 class="m-0">📋 Class List</h3>
                </div>
                <div class="card-body">
                    @if (MyRazorApp.Pages.IndexModel.ClassList.Any())
                    {
                        <table class="table table-hover table-striped align-middle text-center">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Class Name</th>
                                    <th>Student Count</th>
                                    <th>Description</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in MyRazorApp.Pages.IndexModel.ClassList)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td class="text-start">@item.ClassName</td>
                                        <td>@item.StudentCount</td>
                                        <td class="text-start">@item.Description</td>
                                        <td>
                                            <form method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" asp-page-handler="Edit" class="btn btn-warning btn-sm">
                                                    ✏️
                                                </button>
                                                <button type="submit" asp-page-handler="Delete" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this class?');">
                                                    ❌
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            No classes available. Add one from the form!
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />
